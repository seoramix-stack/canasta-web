# Development Environment - For Local Testing
# This file allows you to test without MongoDB connection issues

# Enable DEV_MODE to bypass authentication entirely
DEV_MODE=true

# Use a simple JWT secret for development
JWT_SECRET=dev_secret_key_not_for_production_12345

# Stripe keys (use test keys)
STRIPE_SECRET_KEY=sk_test_fake_key_for_development

# MongoDB can be disabled in DEV_MODE
MONGO_URI=mongodb://localhost:27017/canasta-dev

# Server settings
PORT=8080
NODE_ENV=development
